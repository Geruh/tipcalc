<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="253dp"
            android:layout_height="58dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteY="93dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/totalMealCost"/>
    <Button
            android:text="Tip"
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:id="@+id/calculateTip" app:layout_constraintStart_toStartOf="@+id/totalMealCost"
            android:layout_marginLeft="272dp" android:layout_marginStart="272dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tipPercent"/>
    <Spinner
            android:layout_width="99dp"
            android:layout_height="57dp" tools:layout_editor_absoluteY="94dp"
            android:id="@+id/tipPercent" android:entries="@array/tipPercents"
            app:layout_constraintStart_toEndOf="@+id/totalMealCost" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
</android.support.constraint.ConstraintLayout>